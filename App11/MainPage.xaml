    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot Title="iCheck" FontSize="21">
            <PivotItem Header="Modify" Margin="9,0,15,0">
                <Grid>
                    <TextBox x:Name="textBox1" Margin="50,0,50,451" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" RenderTransformOrigin="-0.465,-0.469"/>
                    <TextBox x:Name="textBox2" Margin="0,0,50,340" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" RenderTransformOrigin="-0.465,-0.469" HorizontalAlignment="Right" Width="236"/>
